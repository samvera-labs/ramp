{
  "name": "@samvera/ramp",
  "version": "4.0.2",
  "description": "Ramp (React Avalon Media Player), React component library for rendering a media player for a IIIF 3.0 spec Manifest",
  "main": "dist/ramp.cjs.js",
  "module": "dist/ramp.esm.js",
  "browser": "dist/ramp.umd.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "npm run clean && NODE_ENV=production vite build && styleguidist build",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "dev": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "test": "jest --coverage --colors",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect $(npm bin)/jest --runInBand",
    "demo": "vite --config vite.demo.config.js",
    "demo:build": "npm run demo:clean && NODE_ENV=production vite build --config vite.demo.config.js",
    "demo:clean": "rimraf demo/dist"
  },
  "contributors": [
    "Dananji Withana <dwithana@iu.edu>",
    "Mason Ballengee <masaball@iu.edu>",
    "Chris Colvard <cjcolvar@iu.edu>",
    "Patrick Lienau <patrick.lienau@thirdwavellc.com>",
    "Adam Arling <aarling@gmail.com>"
  ],
  "keywords": [
    "IIIF",
    "audio",
    "video",
    "react",
    "styleguidist"
  ],
  "author": "Adam J. Arling",
  "license": "ISC",
  "homepage": "https://ramp.avalonmediasystem.org/",
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.28.3",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^26.0.12",
    "@types/react": "18.3.5",
    "@vitejs/plugin-react": "^5.0.2",
    "babel-jest": "^26.3.0",
    "babel-loader": "^10.0.0",
    "babel-plugin-react-compiler": "^19.1.0-rc.3",
    "buffer": "^6.0.3",
    "css-loader": "^7.1.2",
    "gh-pages": "^5.0.0",
    "jest": "^26.4.2",
    "path-browserify": "^1.0.1",
    "prop-types": "^15.7.2",
    "react": "^19.0.0",
    "react-compiler-runtime": "^19.1.0-rc.3",
    "react-dom": "^19.0.0",
    "react-styleguidist": "13.1.3",
    "sass": "^1.91.0",
    "sass-loader": "^16.0.5",
    "sinon": "^18.0.0",
    "stream-browserify": "^3.0.0",
    "style-loader": "^4.0.0",
    "terser": "^5.44.0",
    "vite": "^7.1.11",
    "vite-plugin-commonjs": "^0.10.4",
    "webpack": "^5.102.1"
  },
  "dependencies": {
    "@rollup/plugin-json": "^6.0.1",
    "@silvermine/videojs-quality-selector": "^1.3.1",
    "classnames": "^2.5.1",
    "mammoth": "^1.11.0",
    "manifesto.js": "^4.1.0",
    "mime-types": "^3.0.2",
    "react-error-boundary": "^4.0.11",
    "sanitize-html": "^2.10.0",
    "video.js": "^8.23.4",
    "videojs-markers-plugin": "^1.0.2"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/samvera-labs/ramp.git"
  }
}
